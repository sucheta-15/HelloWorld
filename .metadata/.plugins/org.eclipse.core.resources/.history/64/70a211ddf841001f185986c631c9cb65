package pw_skills;

public class inverted_opp_alphabet_triangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int rows = 5;
		for (int i = 0; i < rows; i++) {
		for (int j = 0; j < rows; j++) {
		if (i == 2 || j == 2) {
		System.out.print("* ");
		} else {
		System.out.print(" ");
		}
		}
		System.out.println();
	}

}
}
